﻿@model EntityLayer.Concrete.Heading


@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<br />
@using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control", @placeholder = "Başlık adını giriniz..." })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.d1, "Başlık Kategorisi Seçiniz..", new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Başlığı Oluştur</button>
    </div>
}